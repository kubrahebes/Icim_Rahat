<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Hakkımızda"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ekle"
        android:background="@drawable/add"
        android:layout_marginLeft="10dp"/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/misyon"
    android:text="Burası Anaokulunun misyonunu ,vizyonunu bellirtecegi alandır"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="--------------------------------------------------"
        android:textSize="30dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:text="Adress Bigisi"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/adress"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="--------------------------------------------------"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="100dp"
        android:id="@+id/iletisim"
        android:layout_marginTop="10dp"
        android:text="İletişim Bilgilerinin oldugu alan"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
android:text="--------------------------------------------------"
        android:textSize="30dp"
        />



</LinearLayout>